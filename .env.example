# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# SMS Configuration (Optional - for production SMS)
# Twilio (Recommended)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Personal Email)
FROM_EMAIL=your_gmail@gmail.com
EMAIL_PROVIDER=gmail
EMAIL_PASSWORD=your_gmail_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Database
DATABASE_URL=sqlite:///./medical_scheduling.db

# Clinic Configuration
CLINIC_NAME=Valley Medical Center
CLINIC_ADDRESS=123 Health St, Medical City, MC 12345
CLINIC_PHONE=+1-555-MEDICAL

# Scheduling Configuration
NEW_PATIENT_DURATION=60  # minutes
RETURNING_PATIENT_DURATION=30  # minutes
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=17:00
TIMEZONE=America/New_York

# Reminder Configuration
REMINDER_1_DAYS_BEFORE=7
REMINDER_2_DAYS_BEFORE=3
REMINDER_3_DAYS_BEFORE=1
